<h2>Doctors</h2>
<div class="row">
    {{#each doctor}}
  <div class="doctor-card card bg-light m-3 col-lg-4" style="max-width: 20rem;">
    <div class="card-header">{{name}} <button id={{id}} class="btn-trash">ðŸ—‘</button></div>
    <div class="card-body">
      <h5 class="card-title"></h5>
      <p class="card-text">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><b>Specialty:</b> {{specialty}}</li>
        <li class="list-group-item"><b>Office Address:</b> {{address}}</li>
      </ul>
      </p>
    </div>
  </div>
    {{/each}}
  <form class="doctor-form">
    <input type="text" name="name" placeholder="Doctor Name" />
    <input type="text" name="specialty" placeholder="Doctor Specialty" />
    <input type="text" name="address" placeholder="Office Address" />

    <button type="submit" id="create-btn" class="create btn btn-outline-success btn-sm">Add</button>
  </form>
</div>

<script src="/js/doctor.js"></script>