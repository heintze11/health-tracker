  <h2>Appointments</h2>
<div class="row">
    {{#each appointment}}
  <div class="card bg-light m-3 col-lg-4" style="max-width: 20rem;">
    <div class="card-header">{{doctor.name}}<button id={{id}} class="btn-trash">ðŸ—‘</button></div>
    <div class="card-body">
      <h5 class="card-title"></h5>
      <p class="appointment-card">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Appointment Date: {{date}}</li>
        <li class="list-group-item">Appointment Time: {{time}}</li>
      </ul>
      </p>
    </div>
  </div>
    {{/each}}
    
  <br>

  <form class="appointment-form">
    <input type="date" class="date" name="date" value="2018-07-22" min="2018-01-01">
    <input type="time" id="appt" name="time">
    <select class="form-control" name="doctor" placeholder="Doctor">
      {{#each doctor}}
      <option value={{id}}>{{name}}</option>
      {{/each}}
    </select>
    <button type="submit" class="create btn btn-outline-success btn-sm">Create</button>
  </form>
  <br>

  <script>
  
    document.addEventListener('DOMContentLoaded', function () {
      var calendarEl = document.getElementById('calendar');
      var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        eventContent: {}
      });
      calendar.render();
    });

  </script>

  <div id='calendar'></div>


  <br><br>


</div>

<script src="/js/appointment.js"></script>